# =============================================================================
# Africa Tech - Dossier public (front web)
# =============================================================================
# Ce fichier est utilisé que le DocumentRoot soit la racine du projet ou public/.
# =============================================================================

# Page d'accueil par défaut
DirectoryIndex index.php

# Pas de listing des répertoires
Options -Indexes

# Suivre les liens symboliques (souvent requis pour les assets)
Options +FollowSymLinks

# Bloquer l'accès aux fichiers sensibles (logs, .env si déplacé, etc.)
<FilesMatch "\.(env|log|gitignore|htaccess)$">
    Require all denied
</FilesMatch>

# Empêcher l'accès au répertoire logs/
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteRule ^logs/ - [F,L]
</IfModule>

# =============================================================================
# Cache navigateur (performance – durées de vie efficaces)
# =============================================================================
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/x-icon "access plus 1 year"
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType application/javascript "access plus 1 year"
    ExpiresByType application/x-javascript "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType text/vtt "access plus 1 month"
</IfModule>
<IfModule mod_headers.c>
    <FilesMatch "\.(jpg|jpeg|png|gif|webp|svg|ico|css|js|woff2?|vtt)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
    </FilesMatch>
</IfModule>
